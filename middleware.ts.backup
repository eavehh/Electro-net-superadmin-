import { NextResponse } from 'next/server'
import type { NextRequest } from 'next/server'

// Защищенные маршруты - требуют авторизации
const protectedPaths = ['/dashboard', '/stations', '/users', '/transactions', '/settings', '/analytics']

// Публичные маршруты - доступны без авторизации
const publicPaths = ['/', '/login']

export function middleware(request: NextRequest) {
    const { pathname } = request.nextUrl

    // Получаем токен из cookie (если есть)
    const token = request.cookies.get('adminToken')?.value

    // Проверяем, является ли путь защищенным
    const isProtectedPath = protectedPaths.some(path => pathname.startsWith(path))
    const isPublicPath = publicPaths.includes(pathname) || pathname === '/'

    // Если пользователь пытается попасть на защищенный маршрут без токена
    if (isProtectedPath && !token) {
        const url = new URL('/', request.url)
        return NextResponse.redirect(url)
    }

    // Если пользователь авторизован и пытается попасть на страницу логина
    if (token && isPublicPath) {
        const url = new URL('/dashboard', request.url)
        return NextResponse.redirect(url)
    }

    return NextResponse.next()
}

// Конфигурация middleware - на какие пути применять
export const config = {
    matcher: [
        /*
         * Match all request paths except for the ones starting with:
         * - api (API routes)
         * - _next/static (static files)
         * - _next/image (image optimization files)
         * - favicon.ico (favicon file)
         */
        '/((?!api|_next/static|_next/image|favicon.ico).*)',
    ],
}
